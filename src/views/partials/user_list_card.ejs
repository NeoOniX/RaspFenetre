<li id="listelement">
    <div class="global">
        <div class="logo">
            <img id="logo" src="../img/icon/<%= icon %>" />
        </div>
        <input id="pseudo" name="username" value="<%= name %>" readonly></input>
        <input style="display:none;" name="id" value="<%= id %>" readonly></input>
        <input style="display:none;" name="pass" value="<%= pass %>" readonly></input>
        <input style="display:none;" name="perms" value="<%= perms %>" readonly></input>
    </div>
    <div class="buttons">
        <button class="bluebutton" id="edit">
            <svg width="19" height="19" viewBox="0 0 19 19" xmlns="http://www.w3.org/2000/svg">
